<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:Nexi.UI"
             xmlns:converters="using:Nexi.UI.Converters"
             xmlns:material="using:Material.Icons.Avalonia"
             x:Class="Nexi.UI.App">

	<Application.Styles>
		<FluentTheme/>
		<material:MaterialIconStyles />
	</Application.Styles>

	<Application.Resources>
		<converters:MessageBackgroundConverter x:Key="MessageBackgroundConverter"/>
		<converters:MessageAlignmentConverter x:Key="MessageAlignmentConverter"/>
	</Application.Resources>

</Application>