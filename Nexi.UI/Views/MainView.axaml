<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:material="using:Material.Icons.Avalonia"
             xmlns:vm="clr-namespace:Nexi.UI.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Nexi.UI.Views.MainView"
             x:DataType="vm:MainViewModel">
  <Design.DataContext>
    <!-- This only sets the DataContext for the previewer in an IDE,
         to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
    <vm:MainViewModel />
  </Design.DataContext>

  <UserControl.Styles>
    <!-- Button styles -->
    <Style Selector="Button.sidebar-button">
      <Setter Property="Height" Value="48"/>
      <Setter Property="Background" Value="Transparent"/>
      <Setter Property="CornerRadius" Value="4"/>
      <Setter Property="Margin" Value="4,2"/>
      <Setter Property="HorizontalAlignment" Value="Stretch"/>
      <Setter Property="VerticalAlignment" Value="Center"/>
      <Setter Property="HorizontalContentAlignment" Value="Center"/>
    </Style>

    <Style Selector="Button.sidebar-button:pointerover">
      <Setter Property="Background" Value="#40A880E4"/>
    </Style>

    <!-- Icon styling -->
    <Style Selector="material|MaterialIcon">
      <Setter Property="Width" Value="24"/>
      <Setter Property="Height" Value="24"/>
    </Style>

    <!-- Title text -->
    <Style Selector="TextBlock.title">
      <Setter Property="FontFamily" Value="Cascadia Code"/>
      <Setter Property="FontWeight" Value="SemiBold"/>
      <Setter Property="Foreground" Value="#A880E4"/>
      <Setter Property="VerticalAlignment" Value="Center"/>
      <Setter Property="Margin" Value="12,0,0,0"/>
    </Style>

    <!-- Sidebar transitions -->
    <Style Selector="Border.sidebar">
      <Setter Property="Transitions">
        <Transitions>
          <DoubleTransition Property="Width" Duration="0:0:0.2" Easing="CubicEaseOut"/>
        </Transitions>
      </Setter>
    </Style>
  </UserControl.Styles>

  <Grid ColumnDefinitions="Auto,*">
    <!-- Sidebar -->
    <Border Grid.Column="0"
            Classes="sidebar"
            Width="{Binding SidebarWidth}"
            Background="#1E1E1E">
      <DockPanel>
        <!-- Header with Toggle Button and Title -->
        <DockPanel DockPanel.Dock="Top" Height="48" Margin="4,4,4,0">
          <Button Command="{Binding ToggleSidebarCommand}"
                  Classes="sidebar-button"
                  Width="40"
                  Padding="8"
                  DockPanel.Dock="Left">
            <material:MaterialIcon Kind="Menu"/>
          </Button>
          <TextBlock Text="NEXI"
                   Classes="title"
                   IsVisible="{Binding IsSidebarExpanded}"/>
        </DockPanel>

        <!-- Menu Items -->
        <StackPanel Margin="4,8,4,4">
          <!-- Menu Items Container - Expanded -->
          <StackPanel IsVisible="{Binding IsSidebarExpanded}">
            <Button Classes="sidebar-button" Command="{Binding HomeCommand}">
              <DockPanel>
                <material:MaterialIcon Kind="Home" Margin="12,0,12,0"/>
                <TextBlock Text="Home" VerticalAlignment="Center"/>
              </DockPanel>
            </Button>

            <Button Classes="sidebar-button" Command="{Binding SettingsCommand}">
              <DockPanel>
                <material:MaterialIcon Kind="Cog" Margin="12,0,12,0"/>
                <TextBlock Text="Settings" VerticalAlignment="Center"/>
              </DockPanel>
            </Button>

            <Button Classes="sidebar-button" Command="{Binding VoiceCommand}">
              <DockPanel>
                <material:MaterialIcon Kind="Microphone" Margin="12,0,12,0"/>
                <TextBlock Text="Voice Commands" VerticalAlignment="Center"/>
              </DockPanel>
            </Button>

            <Button Classes="sidebar-button" Command="{Binding AIModelsCommand}">
              <DockPanel>
                <material:MaterialIcon Kind="Brain" Margin="12,0,12,0"/>
                <TextBlock Text="AI Models" VerticalAlignment="Center"/>
              </DockPanel>
            </Button>

            <Button Classes="sidebar-button" Command="{Binding AboutCommand}">
              <DockPanel>
                <material:MaterialIcon Kind="Information" Margin="12,0,12,0"/>
                <TextBlock Text="About" VerticalAlignment="Center"/>
              </DockPanel>
            </Button>
          </StackPanel>

          <!-- Menu Items Container - Collapsed -->
          <StackPanel IsVisible="{Binding !IsSidebarExpanded}">
            <Button Classes="sidebar-button" Command="{Binding HomeCommand}">
              <material:MaterialIcon Kind="Home"/>
            </Button>

            <Button Classes="sidebar-button" Command="{Binding SettingsCommand}">
              <material:MaterialIcon Kind="Cog"/>
            </Button>

            <Button Classes="sidebar-button" Command="{Binding VoiceCommand}">
              <material:MaterialIcon Kind="Microphone"/>
            </Button>

            <Button Classes="sidebar-button" Command="{Binding AIModelsCommand}">
              <material:MaterialIcon Kind="Brain"/>
            </Button>

            <Button Classes="sidebar-button" Command="{Binding AboutCommand}">
              <material:MaterialIcon Kind="Information"/>
            </Button>
          </StackPanel>
        </StackPanel>
      </DockPanel>
    </Border>

    <!-- Main Content -->
    <ContentControl Grid.Column="1" Content="{Binding CurrentPage}"/>
  </Grid>
</UserControl>
